<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    
    <parameters>
        <parameter key="oxygen_passbook.event_grid.configuration_class">Oxygen\DatagridBundle\Grid\Configuration\SimpleListConfiguration</parameter>
    </parameters>

    <services>
        <service id="oxygen_passbook.grid.event_configuration" class="%oxygen_passbook.event_grid.configuration_class%">
        	<tag name="oxygen.grid.configuration" 
        		grid_id="oxygen_passbook_event" 
        		source_type="entity" source_reference="oxygen_passbook.event" />
        </service>
    </services>
    
</container>
