{% block form_row %}
{% spaceless %}
    <div>
        {{ form_label(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
    </div>
{% endspaceless %}
{% endblock form_row %}

{% block form_label %}
{% spaceless %}
    {% if not compound %}
        {% set label_attr = label_attr|merge({'for': id}) %}
    {% endif %}
    {% if required %}
        {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
    {% endif %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    {% if (plaintext is defined and plaintext)  %}
    {{ label|trans({}, translation_domain) }}
    {% else %}
    <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>
    	{{ label|trans({}, translation_domain) }}
    	{% if required %}
		<span class="input-required" title="{{ 'label.required'|trans({}, 'oxygen_passbook_form') }}">*</span>
		{% endif %}
    </label>
    {% endif %}
{% endspaceless %}
{% endblock form_label %}

{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
    <div>
	    <ul class="form-error label label-important">
	        {% for error in errors %}
	            <li>{{
	                error.messagePluralization is null
	                    ? error.messageTemplate|trans(error.messageParameters, 'validators')
	                    : error.messageTemplate|transchoice(error.messagePluralization, error.messageParameters, 'validators')
	            }}</li>
	        {% endfor %}
	    </ul>
	</div>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block datetime_widget %}
{% spaceless %}
    {% if widget == 'single_text' %}
        {{ block('form_widget_simple') }}
    {% else %}
        <div {{ block('widget_container_attributes') }}>
            {{ form_errors(form.date) }}
            {{ form_errors(form.time) }}
            {{ form_widget(form.date, { 'attr': { 'class': 'controls controls-row' } }) }}
            {{ form_widget(form.time, { 'attr': { 'class': 'controls controls-row' } }) }}
        </div>
    {% endif %}
{% endspaceless %}
{% endblock datetime_widget %}

{% block date_widget %}
{% spaceless %}
    {% if widget == 'single_text' %}
        {{ block('form_widget_simple') }}
    {% else %}
    	<div {{ block('widget_container_attributes') }}>
            {{ date_pattern|replace({
                '{{ year }}':  form_widget(form.year, { 'attr': { 'class': 'span3' } }),
                '{{ month }}': form_widget(form.month, { 'attr': { 'class': 'span3' } }),
                '{{ day }}':   form_widget(form.day, { 'attr': { 'class': 'span3' } }),
            })|raw }}
        </div>
    {% endif %}
{% endspaceless %}
{% endblock date_widget %}

{% block time_widget %}
{% spaceless %}
    {% if widget == 'single_text' %}
        {{ block('form_widget_simple') }}
    {% else %}
    	<div {{ block('widget_container_attributes') }}>
    		<div class="input-append span3">
           		{{ form_widget(form.hour, { 'attr': { 'size': '1', 'class': 'span8'  } }) }}
           		<span class="add-on">h</span>
           	</div>
           	<div class="input-append span3">
            	{{ form_widget(form.minute, { 'attr': { 'size': '1', 'class': 'span8'  } }) }}
            	<span class="add-on">mn</span>
            </div>
            {% if with_seconds %}
            <div class="input-append span3">
            	{{ form_widget(form.second, { 'attr': { 'size': '1', 'class': 'span8'  } }) }}
            	<span class="add-on">s</span>
            </div>
           	{% endif %}
       </div>
    {% endif %}
{% endspaceless %}
{% endblock time_widget %}

{% block collection_widget %}
{% spaceless %}
    {% if prototype is defined %}
        {% set attr = attr|merge({'data-prototype': form_row(prototype) }) %}
    {% endif %}
    {{ block('form_widget') }}
{% endspaceless %}
{% endblock collection_widget %}